# Database Configuration
POSTGRES_DB=printing_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here

# Backend Configuration
DATABASE_URL=postgresql://postgres:your_postgres_password_here@postgres:5432/printing_platform
REDIS_URL=redis://redis:6379
SECRET_KEY=your_very_secure_secret_key_here_min_32_chars
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
FRONTEND_API_URL=https://yourdomain.com
ENVIRONMENT=production
DEBUG=false

# Docker Images (will be set by CI/CD)
BACKEND_IMAGE=printing-platform-backend:latest
FRONTEND_IMAGE=printing-platform-frontend:latest
TELEGRAM_IMAGE=printing-platform-telegram:latest

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ADMIN_CHAT_IDS=123456789,987654321
BOT_LOG_LEVEL=INFO

# Monitoring
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here

# SSL Configuration (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/certificate.crt
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# Optional: External services
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=your_s3_bucket_name
# AWS_REGION=us-east-1

# Email Configuration (if using email notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password