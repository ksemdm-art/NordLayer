# Environment Configuration for NordLayer 3D Printing Platform

# =============================================================================
# GENERAL SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=printing_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password
DATABASE_URL=postgresql://postgres:your-postgres-password@postgres:5432/printing_platform

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_EXTENSIONS=.stl,.obj,.3mf,.jpg,.jpeg,.png,.gif

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
VITE_API_URL=http://localhost:8000
FRONTEND_API_URL=https://yourdomain.com
NODE_ENV=development

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
API_BASE_URL=http://backend:8000
API_TIMEOUT=30
ADMIN_CHAT_IDS=123456789,987654321
BOT_LOG_LEVEL=INFO
HEALTH_CHECK_PORT=8080
SHUTDOWN_TIMEOUT=30
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_EXTENSIONS=.stl,.obj,.3mf

# =============================================================================
# NGINX CONFIGURATION
# =============================================================================
NGINX_CLIENT_MAX_BODY_SIZE=100M

# =============================================================================
# SSL/TLS CONFIGURATION (Production)
# =============================================================================
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/certificate.crt
SSL_PRIVATE_KEY_PATH=/etc/nginx/ssl/private.key
DOMAIN_NAME=yourdomain.com

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
RATE_LIMIT_API=10r/s
RATE_LIMIT_UPLOADS=5r/s
RATE_LIMIT_LOGIN=5r/m